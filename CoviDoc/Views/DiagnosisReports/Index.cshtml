@model IEnumerable<CoviDoc.ViewModels.DiagnosisReportViewModel>

@{
    ViewData["Title"] = "Diagnosis Reports";
}

<h4>Diagnosis Reports</h4>
<form asp-controller="DiagnosisReports" asp-action="Index" method="get">
    <p>
        Id No. : <input type="text" name="IdNumber">
        <input type="submit" value="Filter" />
        Name: <input type="text" name="Name">
        <input type="submit" value="Filter" /> |
        <a asp-action="Index">List</a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.IdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiagnosisReport.TestStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestCentre.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiagnosisReport.DateTested)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.IdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiagnosisReport.TestStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestCentre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiagnosisReport.DateTested)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.DiagnosisReport.DiagnosisReportId">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
